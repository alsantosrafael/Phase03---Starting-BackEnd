
{% extends "layout.html" %}



{% block head %}
    <title> Conteúdos da Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" 
    rel="stylesheet">
{% endblock head %}

{% block content %}

    <div class="titulo">
        <h1>Conteúdos</h1>
    </div>   
    <section class="cards">

        <div class="card" id="starter">
            
            <span class="purple">01</span>
                
            <div class="card-img">
                <img src="assets/Starter.64c237cc.svg" alt="logo starter">
            </div>
            
            <div class="card-info">
                <p class="head1"><strong head1>Torne-se um programador desejado</strong></p>
                <p>no mercado com esses cursos <br> gratuitos</p>
            </div>
            <div class="card-tag">
                <p>Free</p>
                <p>05 Módulos</p>
            </div>
            
        </div>

        <div class="card" id="launchbase">
            
            <span class="orange">02</span>
                
            <div class="card-img">
                <img src="assets/LaunchBase.08285320.svg" alt="logo launchbase">
            </div>
            
            <div class="card-info">
                <p><strong class="head2">Domine a programação do zero</strong> e</p>
                <p>tenha acesso às melhores <br>oportunidades do mercado<br>
            </div>
            <div class="card-tag">
                <p>Premium</p>
                <p>18 Módulos</p>
            </div>
            
        </div>

        
        <div class="card" id="gostack">
            
            <span class="green">03</span>
                
            <div class="card-img">
                <img src="assets/GoStack.83a178a0.svg" alt="logo gostack">
            </div>
            
            <div class="card-info">
                <p><strong class="head3">Treinamento imersivo</strong> nas</p>
                <p>tecnologias mais modernas de</p>
                <p>desenvolvimento web e mobile</p>
            </div>
            <div class="card-tag">
                <p>Premium</p>
                <p>18 Módulos</p>
            </div>
            
        </div>  


    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i><!--o nome do botao tem que ser igual ao do icone! Basta procurar-->
            </a>

            <div class= "modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src= "scripts.js"></script>

 {% endblock content %}   


    